doctype html
html(lang='zh_CN')
    // <![endif]
    head
        meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
        meta(name='viewport', content='width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no')
        title 课程创建页面
        link(href='./styles/bootstrap.min.css', rel='stylesheet')
        //link(rel='stylesheet', media='screen', href='http://192.168.1.21:8090/assets/css/common.css?7.5.12')
        //link(rel='stylesheet', media='screen', href='http://192.168.1.21:8090/assets/css/font-awesome.min.css?7.5.12')
